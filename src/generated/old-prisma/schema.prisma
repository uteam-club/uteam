// Схема Prisma для старой базы данных
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/old-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("OLD_DATABASE_URL")
}

// Модель команды
model Team {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Связь с игроками
  players Player[]

  @@map("Team")
}

// Модель игрока
model Player {
  id                     String    @id @default(uuid())
  firstName              String    @map("first_name")
  lastName               String    @map("last_name")
  middleName             String?   @map("middle_name")
  dateOfBirth            DateTime? @map("date_of_birth")
  number                 Int?
  position               String?
  strongFoot             String?   @map("strong_foot")
  imageUrl               String?   @map("image_url")
  nationality            String?
  academyJoinDate        DateTime? @map("academy_join_date")
  status                 String?
  birthCertificateNumber String?   @map("birth_certificate_number")
  documents              Json? // Массив документов
  createdAt              DateTime  @default(now()) @map("created_at")
  updatedAt              DateTime  @updatedAt @map("updated_at")
  teamId                 String    @map("team_id")

  // Связь с командой
  team Team @relation(fields: [teamId], references: [id])

  @@map("Player")
}
